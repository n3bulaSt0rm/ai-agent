# Base settings
APP_NAME="AI-Agent PDF Management"
DEBUG=true

# Web service settings
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Authentication settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
AUTH_TOKEN_EXPIRE_MINUTES=1440
AUTH_SECRET_KEY=secret_key

# Database settings
DATABASE_PATH=data/admin.db

# AWS S3 settings
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-bucket-name

# RabbitMQ settings
RABBITMQ_HOST=cougar.rmq.cloudamqp.com
RABBITMQ_PORT=5671
RABBITMQ_USERNAME=your-username
RABBITMQ_PASSWORD=your-password
RABBITMQ_VHOST=your-vhost

# Topic/exchange names
PDF_PROCESSING_TOPIC=pdf-processing-topic

# Qdrant settings
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=regulations

# OCR settings
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_LANG=vie

# Processing settings
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
PROCESSING_THREADS=2

# Webhook settings
WEB_SERVICE_URL=http://localhost:8000/api/webhook/status-update

# Logging settings
LOG_LEVEL=INFO 